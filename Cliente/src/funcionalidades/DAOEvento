public class DAOEvento {
	private static DAOEvento instance = new DAOEvento();
	private EventoBeanRemote EventoBean;

	public static DAOEvento getInstance() {
		return instance;
	}
	
	public DAOEvento() {
		try {
			setItrBean((EventoBeanRemote) InitialContext.doLookup("ejb:/ProyectoEJB/EventoBean!com.bigfive.beans.EventoBeanRemote"));
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public EventoBeanRemote getEventoBean() {
		return EventoBean;
	}

	public void setEventoBean(EventoBeanRemote EventoBean) {
		this.EventoBean = EventoBean;
	}
	public void cargarComboBox(JComboBox cb) {
		try {
			EventoBean.listarElementos().forEach(t -> {
				cb.addItem(t);
			});
		} catch (Exception e) {
			// TODO: handle exception
		}		
	}
	public void cargarComboBoxHabilitado(JComboBox cb) {
		try {
			EventoBean.listarElementos().forEach(t -> {
				cb.addItem(t);
			});
		} catch (Exception e) {
			// TODO: handle exception
		}		
	}
}